      <!-- Frame 9 : Étirée montée -->
      <sprite>
        <line>   ####   </line>
        <line>  ##  ##  </line>
        <line> ##    ## </line>
        <line> #      # </line>
        <line>#        #</line>
        <line>#        #</line>
