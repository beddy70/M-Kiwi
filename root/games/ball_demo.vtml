        <line>  ##  ##  </line>
        <line> ##    ## </line>
        <line>#        #</line>
        <line>#        #</line>
        <line> ##    ## </line>
        <line> ##    ## </line>
        <line>  ##  ##  </line>
        <line>  ######  </line>
      </sprite>
      
      <!-- Frame 4 : Contact sol -->
      <sprite>
