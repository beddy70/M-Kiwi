    <!-- Sprite balle contour (10 frames) - 10x10 pixels avec écrasement fluide -->
    <spritedef id="ball" type="bitmap" width="5" height="5">
      
      <!-- Frame 0 : Balle ronde normale -->
      <sprite>
        <line>  ######  </line>
        <line> ##    ## </line>
        <line>##      ##</line>
        <line>#        #</line>
        <line>#        #</line>
        <line>#        #</line>
        <line>#        #</line>
        <line>##      ##</line>
        <line> ##    ## </line>
        <line>  ######  </line>
      </sprite>
      
      <!-- Frame 1 : Légère déformation descente -->
      <sprite>
        <line>  ######  </line>
        <line> ##    ## </line>
        <line> #      # </line>
        <line>#        #</line>
        <line>#        #</line>
        <line>#        #</line>
        <line>#        #</line>
        <line> #      # </line>
        <line> ##    ## </line>
        <line>  ######  </line>
      </sprite>
      
      <!-- Frame 2 : Étirée descente -->
      <sprite>
        <line>   ####   </line>
        <line>  ##  ##  </line>
        <line> ##    ## </line>
        <line> #      # </line>
        <line>#        #</line>
        <line>#        #</line>
        <line> #      # </line>
        <line> ##    ## </line>
        <line>  ##  ##  </line>
        <line>   ####   </line>
      </sprite>
      
      <!-- Frame 3 : Approche sol -->
      <sprite>
        <line>          </line>
